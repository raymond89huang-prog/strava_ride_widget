<Window x:Class="RideBoard.Widget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="12" Background="#F01E1E1E" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="SETTINGS" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Auto Start Checkbox -->
                <CheckBox Content="Start on Boot (开机自启)" 
                          IsChecked="{Binding IsAutoStartEnabled}"
                          Foreground="White" FontSize="13"
                          HorizontalAlignment="Center"
                          Cursor="Hand"
                          Margin="0,0,0,15"/>

                <!-- Strava Login Button -->
                <Button Content="Connect Strava (关联账号)"
                        Command="{Binding LoginCommand}"
                        Background="#FC4C02" Foreground="White"
                        Padding="15,6" BorderThickness="0"
                        HorizontalAlignment="Center"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="Close"
                    Click="BtnClose_Click"
                    Background="Transparent" Foreground="#80FFFFFF"
                    BorderThickness="0" FontSize="12"
                    HorizontalAlignment="Center"
                    Cursor="Hand" Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>
