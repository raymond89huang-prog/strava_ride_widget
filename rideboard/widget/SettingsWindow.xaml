<Window x:Class="RideBoard.Widget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="280" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="6" Background="{StaticResource PanelBrush}" BorderBrush="#333333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <!-- Scanline Overlay -->
            <Rectangle Fill="{StaticResource ScanlineBrush}" Opacity="0.3" IsHitTestVisible="False" RadiusX="6" RadiusY="6"/>
            
            <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Settings" Foreground="{StaticResource LabelBrush}" FontSize="14" FontWeight="Bold" FontFamily="{StaticResource LabelFont}" HorizontalAlignment="Center"/>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Auto Start Checkbox -->
                <CheckBox Content="Start on Boot" 
                          IsChecked="{Binding IsAutoStartEnabled}"
                          Foreground="{StaticResource DigitalMainBrush}" FontSize="13" FontFamily="{StaticResource LabelFont}"
                          HorizontalAlignment="Center"
                          Cursor="Hand"
                          Margin="0,0,0,15"/>

                <!-- Strava Login Button -->
                <Button Content="Connect Strava"
                        Command="{Binding LoginCommand}"
                        Background="#FC4C02" Foreground="White" FontFamily="{StaticResource LabelFont}" FontSize="13"
                        Padding="15,6" BorderThickness="0"
                        HorizontalAlignment="Center"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- About Info -->
                <StackPanel Margin="0,25,0,0">
                    <TextBlock Text="RideBoard v1.2.4" Foreground="{StaticResource LabelBrush}" FontSize="12" FontWeight="SemiBold" FontFamily="{StaticResource LabelFont}" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="{StaticResource DigitalDarkBrush}" FontSize="11" FontFamily="{StaticResource LabelFont}" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Hyperlink NavigateUri="https://github.com/raymond89huang-prog/strava_ride_widget" RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="{StaticResource DigitalDarkBrush}" TextDecorations="None">
                            Developed by Raymond Huang
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Text="2025 Open Source (MIT)" Foreground="#60FFFFFF" FontSize="10" FontFamily="{StaticResource LabelFont}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="Close"
                    Click="BtnClose_Click"
                    Background="Transparent" Foreground="{StaticResource LabelBrush}" FontFamily="{StaticResource LabelFont}"
                    BorderThickness="0" FontSize="12"
                    HorizontalAlignment="Center"
                    Cursor="Hand" Margin="0,10,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
